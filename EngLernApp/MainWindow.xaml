<Window x:Class="WpfAppChapter2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppChapter2"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="1340">
    <Grid >

        <Grid.Background>
            <ImageBrush ImageSource="D:\Изучение C# и XAML\Pictures\English.jpeg"/>
        </Grid.Background>


        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Fill="DarkRed"/>
        <Rectangle Grid.Row="1" Grid.Column="0" Grid.RowSpan="7" Fill="DarkRed"  ></Rectangle>
        <Rectangle Grid.Row="0" Grid.Column="0" Fill="Orange"></Rectangle>

        
      <Image Source="D:\Изучение C# и XAML\Pictures\Иконка_Логотип.jpg" Margin="5 5 5 5"></Image>

        
            <Button Grid.Row="1" Grid.Column="0" Background="Tomato" Margin="5 5 5 5" >
            <StackPanel Orientation="Horizontal" >
                <Image Height="55" Source="D:\Изучение C# и XAML\Pictures\Иконка_Домашняя страница.png"></Image>
                <Separator Width="0.5" Background="Tomato"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="Yellow"> HOME</TextBlock>
            </StackPanel>
        </Button>


        <StackPanel></StackPanel>
        <Button Grid.Row="2" Grid.Column="0" Background="Tomato" Margin="5 5 5 5" >
            <StackPanel Orientation="Horizontal" >
                <Image Height="50" Source="D:\Изучение C# и XAML\Pictures\Иконка_TOEFL.png"></Image>
                <Separator Width="6" Background="Tomato"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="Yellow" > TOEFL </TextBlock>
                
                <ComboBox Height="10" Width="10">
                    <ComboBoxItem>
                        <StackPanel Orientation="Vertical">
                            <Image Height="50" Source="D:\Изучение C# и XAML\Pictures\Иконка_Аудиоматериалы.png"></Image>
                            <TextBlock>Аudio 
                                <LineBreak/>
                                materials
                            </TextBlock>
                        </StackPanel>
                    </ComboBoxItem>
                </ComboBox>
                
            </StackPanel>
        </Button>
        

        <Button Grid.Row="3" Grid.Column="0" Background="Tomato" Margin="5 5 5 5" >
            <StackPanel Orientation="Horizontal" >
                <Image Height="50" Source="D:\Изучение C# и XAML\Pictures\Иконка_IELTS.png"></Image>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="Yellow"> IELTS</TextBlock>
            </StackPanel>
        </Button>

        <Button Grid.Row="4" Grid.Column="0" Background="Tomato" Margin="5 5 5 5" >
            <StackPanel Orientation="Horizontal" >
                <Image Height="50" Source="D:\Изучение C# и XAML\Pictures\Иконка_Книги.png"></Image>
                <Separator Width="6" Background="Tomato"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="Yellow"> Books</TextBlock>
            </StackPanel>
        </Button>

        <Button Grid.Row="5" Grid.Column="0" Background="Tomato" Margin="5 5 5 5" >
            <StackPanel Orientation="Horizontal" >
                <Image Height="50" Source="D:\Изучение C# и XAML\Pictures\Иконка_Аудиокниги.png"></Image>
                <Separator Width="6" Background="Tomato"/>
                <TextBlock   HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="Yellow" TextWrapping="Wrap"> Audio-
                <LineBreak/>
                    books
                </TextBlock>
            </StackPanel>
        </Button>

        <Button Grid.Row="6" Grid.Column="0" Background="Tomato" Margin="5 5 5 5" >
            <StackPanel Orientation="Horizontal" >
                <Image Height="50" Source="D:\Изучение C# и XAML\Pictures\Иконка_Словарь.jpg"></Image>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="Yellow"> Vocabulary</TextBlock>
            </StackPanel>
        </Button>

        
        

    </Grid>
</Window>
