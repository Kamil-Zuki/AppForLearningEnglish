        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="1340">
    <Grid >

        <Grid.Background>
            <ImageBrush ImageSource="D:\Изучение C# и XAML\Pictures\English.jpeg"/>
        </Grid.Background>


        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="120"/>
            <ColumnDefinition  Width="10"/> <!-- second column -->
            <ColumnDefinition Width="*"/> <!-- third column -->
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Fill="DarkRed"/>
        <Rectangle Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="7" Fill="DarkRed"  ></Rectangle>
        <Rectangle Grid.Row="0" Grid.Column="0" Fill="Orange"></Rectangle>

        
      <Image Source="D:\Изучение C# и XAML\Pictures\Иконка_Логотип.jpg" Margin="5 5 5 5"></Image>

        
            <Button Grid.Row="1" Grid.Column="0" Background="Tomato" Margin="5 5 5 5" >

            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>

            <StackPanel Orientation="Horizontal" >
                <Image Height="65" Source="D:\Изучение C# и XAML\Pictures\Иконка_Домашняя страница.png"></Image>
                <Separator Width="0.5" Background="Tomato"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="Yellow"> HOME</TextBlock>
            </StackPanel>
        </Button>


        
        <Button Grid.Row="2" Grid.Column="0" Background="Tomato" Margin="5 5 5 5" >

            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>

            <StackPanel Orientation="Horizontal" >
                <Image Height="50" Source="D:\Изучение C# и XAML\Pictures\Иконка_TOEFL.png"></Image>
                <Separator Width="6" Background="Tomato"/>
