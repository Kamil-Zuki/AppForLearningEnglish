            </StackPanel>
        </Button>

        <!--ComboBox for TOEFL -->
        <ComboBox   Height="20" Width="15" Grid.Column="1" Grid.Row="2" Margin="-6 0 1 0">
            <Button>

                

                <ComboBoxItem Background="DarkKhaki" >
                    <StackPanel Orientation="Vertical">
                        <Image Height="50" Source="D:\Изучение C# и XAML\Pictures\Иконка_Аудиоматериалы.png"></Image>
                        <TextBlock Background="Purple" Foreground="Yellow">Text 
                                <LineBreak/>
                                materials
                        </TextBlock>
                    </StackPanel>
                </ComboBoxItem>
            </Button>

            <Button>


                <ComboBoxItem Background="DarkKhaki">
                    <StackPanel Orientation="Vertical">
                        <Image Height="50" Source="D:\Изучение C# и XAML\Pictures\Иконка_Текстовые Материалы.png"></Image>
                        <TextBlock Background="Purple" Foreground="Yellow">Аudio 
                                <LineBreak/>
                                materials
                        </TextBlock>
                    </StackPanel>
                </ComboBoxItem>
                
